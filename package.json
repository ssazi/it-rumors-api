{
  "name": "itrumors",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@8.6.5",
  "scripts": {
    "start": "pnpm web dev",
    "start:admin": "pnpm admin dev",
    "start:api": "pnpm api dev",
    "start:debug": "pnpm api debug",
    "check": "pnpm api check",
    "web": "pnpm --filter=@itrumors/web",
    "admin": "pnpm --filter=@itrumors/admin",
    "api": "pnpm --filter=@itrumors/api",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "postinstall": "npx simple-git-hooks"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.40.2",
    "@types/md5": "^2.3.2",
    "@types/node": "^20.4.10",
    "@unocss/eslint-config": "^0.55.0",
    "dayjs": "^1.11.9",
    "eslint": "^8.47.0",
    "lint-staged": "^13.2.3",
    "md5": "^2.3.0",
    "simple-git-hooks": "^2.9.0",
    "typescript": "^5.1.6"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
